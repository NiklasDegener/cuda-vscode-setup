{
    "cmake.buildDirectory": "${workspaceFolder}/build/${variant:buildType}/build",
    "cmake.installPrefix": "${workspaceFolder}/build/${variant:buildType}",
    "cmake.copyCompileCommands": "${workspaceFolder}/compile_commands.json",
    "cmake.exportCompileCommandsFile": true,
    "cmake.configureSettings": {
        "CUDA_PATH": "/usr/local/cuda-13", // Change this path if needed
        "CMAKE_CUDA_COMPILER": "/usr/local/cuda-13/bin/nvcc", // Change this path if needed
        "CMAKE_BUILD_TYPE": "${variant:buildType}",
        "CMAKE_ENABLE_TRACING": "ON", // Enable/disable tracing information (for ncu)
        "CMAKE_CUDA_ARCHITECTURES": "75" // 75=RTX 20xx Turing, 80=Ampere, 86=RTX 30xx, 89/90=Ada/Hopper
    },
    // Clang-format options
    "clang-format.executable": "/usr/bin/clang-format"
}